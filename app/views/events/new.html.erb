<h1>New Event</h1>

<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', object: @event %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :host %>
  <%= f.text_field :host %>

  <%= f.submit "Create event", class: "btn btn-large btn-primary" %>
<% end %>
