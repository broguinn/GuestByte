<h1>New Event</h1>

<%= form_for(@event, html: { :class => "form-horizontal", :role => "form" }) do |f| %>
  <%= render 'shared/error_messages', object: @event %>
  
  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :host, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= f.text_field :host, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= date_select("event", "date", :start_year => 2013, :use_month_numbers => true) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= f.text_field :location, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :start_time, :class => "col-lg-2 control-label" %>   
    <div class="col-lg-10">
      <%= time_select( :event, :start_time, prompt: { hour: 'Hour', minute: 'Minute', :ampm => true } ) %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= time_select( :event, :end_time, prompt: { hour: 'Hour', minute: 'Minute', :ampm => true } ) %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>  
    <div class="col-lg-10">
      <%= f.text_field :description, :class => "form-control" %>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Create event", class: "btn btn-large btn-primary" %>
<% end %>
